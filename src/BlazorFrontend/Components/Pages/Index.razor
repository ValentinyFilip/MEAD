@page "/"
@rendermode InteractiveServer
@layout BlankLayout

@inject NavigationManager Navigation

<PageTitle>Welcome</PageTitle>

<section class="d-flex align-items-center min-vh-100 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <h1 class="display-5 fw-semibold mb-3">Welcome to MEAD</h1>
                <p class="lead text-muted mb-4">
                    Sign in to manage your data and access all application features.
                </p>
                <button class="btn btn-primary btn-lg px-4"
                        @onclick="GoToLogin">
                    Get started
                </button>
            </div>
        </div>
    </div>
</section>

@code {
    private void GoToLogin() => Navigation.NavigateTo("/login");
}