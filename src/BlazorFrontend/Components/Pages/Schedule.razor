@page "/schedule"
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="mb-4">Medication Schedule</MudText>

<MudCard>
    <MudCardContent>
        <MudDatePicker @bind-Date="_selectedDate" Label="Select Date"/>

        <MudDivider Class="my-4"/>

        <MudStack Spacing="2">
            <MudText Typo="Typo.h6">@_selectedDate?.ToString("dddd, MMMM dd, yyyy")</MudText>

            <MudPaper Elevation="2" Class="pa-3">
                <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Filled.Medication" Color="Color.Primary"/>
                        <MudText Typo="Typo.body1">08:00 AM - Aspirin 100mg</MudText>
                    </MudStack>
                    <MudButton Size="Size.Small" Color="Color.Success" Variant="Variant.Filled">Mark Taken</MudButton>
                </MudStack>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-3">
                <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Filled.Medication" Color="Color.Primary"/>
                        <MudText Typo="Typo.body1">12:00 PM - Vitamin D 1000 IU</MudText>
                    </MudStack>
                    <MudButton Size="Size.Small" Color="Color.Success" Variant="Variant.Filled">Mark Taken</MudButton>
                </MudStack>
            </MudPaper>

            <MudPaper Elevation="2" Class="pa-3">
                <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudIcon Icon="@Icons.Material.Filled.Medication" Color="Color.Primary"/>
                        <MudText Typo="Typo.body1">06:00 PM - Metformin 500mg</MudText>
                    </MudStack>
                    <MudButton Size="Size.Small" Color="Color.Success" Variant="Variant.Filled">Mark Taken</MudButton>
                </MudStack>
            </MudPaper>
        </MudStack>
    </MudCardContent>
</MudCard>

@code {
    private DateTime? _selectedDate = DateTime.Today;
}
