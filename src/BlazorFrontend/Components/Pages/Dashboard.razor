@page "/"

<MudText Typo="Typo.h4" Class="mb-4">Dashboard</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6">Total Medications</MudText>
                <MudText Typo="Typo.h3" Color="Color.Primary">12</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6">Today's Doses</MudText>
                <MudText Typo="Typo.h3" Color="Color.Success">8</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6">Missed Doses</MudText>
                <MudText Typo="Typo.h3" Color="Color.Warning">2</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudText Typo="Typo.h6">Adherence Rate</MudText>
                <MudText Typo="Typo.h3" Color="Color.Info">85%</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">Upcoming Doses</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudTimeline TimelineOrientation="TimelineOrientation.Vertical">
                    <MudTimelineItem Color="Color.Success">
                        <MudText Typo="Typo.h6">08:00 AM - Aspirin</MudText>
                        <MudText Typo="Typo.body2">100mg</MudText>
                    </MudTimelineItem>
                    <MudTimelineItem Color="Color.Info">
                        <MudText Typo="Typo.h6">12:00 PM - Vitamin D</MudText>
                        <MudText Typo="Typo.body2">1000 IU</MudText>
                    </MudTimelineItem>
                    <MudTimelineItem Color="Color.Primary">
                        <MudText Typo="Typo.h6">06:00 PM - Metformin</MudText>
                        <MudText Typo="Typo.body2">500mg</MudText>
                    </MudTimelineItem>
                </MudTimeline>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
